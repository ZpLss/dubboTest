<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="consumer"/>
    <!--dubbo引用远程服务,底层是tcp长连接，端口默认是20880，  直连方式-->
    <dubbo:reference id="userService" interface="com.dubbo.sdk.service.UserService" url="127.0.0.1:20880"/>
    <dubbo:reference id="greetingService" interface="com.dubbo.sdk.service.GreetingService" async="true" url="127.0.0.1:20880" timeout="20000"/>

</beans>